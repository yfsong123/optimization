<Forgot>:
    allow_stretch: True
    keep_ratio: True
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.jpg'
            
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: " Back to Login"
            font_size: self.width *0.1
            size_hint: 0.2, 0.1
            pos_hint: {'x': 0, 'y':0.1}
            background_color: (0, 0, 1, 1)
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            on_press: root.back_to_login()
            
        Button:
            text: " Forgot Username or Password"
            background_color: (0,0,255,0.6)
            halign: 'left'
            valign: 'middle'
            size_hint: 0.8, 0.1
            pos_hint: {'x': 0.1, 'y':0.1}
            text_size: self.size
            font_size: self.width *0.03
            font_name: "rubiklight"

        Label:
            text: "  Identification"
            font_size: self.height * 0.8
            halign: 'left'
            size_hint: 0.4, 0.05
            pos_hint: {'x': 0.1, 'y':0.1}
            background_color: (1,0,0,1)
            color: 0,0,0,1
            text_size: self.size 
            bold: True
            
            
        BoxLayout:  
            orientation: 'horizontal'
            Label:
                text: "Identification"
                font_size: 22
                halign: 'left'
                size_hint: 0.8, 0.1
                pos_hint: {'x': 0.3, 'y':0.1}
                background_color: (1,0,0,1)
                color: 0,0,0,1
                text_size: self.size
            Button:
                text: "Reset"
                background_color: (0,0,1,0.7)
                halign: 'left'
                size_hint: 0.8, 0.1
                pos_hint: {'x': 0.1, 'y':0.1}
                font_size: 22
